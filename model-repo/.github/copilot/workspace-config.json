{
    "version": "2.0",
    "features": {
        "snippets": true,
        "contextualSuggestions": true,
        "inlineChat": true,
        "ghostText": true,
        "codeExplanation": true,
        "testGeneration": true,
        "securityAnalysis": true,
        "accessibilityCheck": true,
        "performanceInsights": true
    },
    "language": {
        "typescript": {
            "strictTypes": true,
            "testFramework": "jest",
            "lintRules": "strict",
            "documentationStyle": "tsdoc"
        },
        "python": {
            "typeHints": true,
            "testFramework": "pytest",
            "docstringFormat": "google",
            "lintRules": "pep8"
        }
    },
    "editor": {
        "inlineSuggestions": true,
        "completionTriggerMode": "automatic",
        "suggestionDelay": "immediate",
        "multilineSuggestions": true
    },
    "security": {
        "scanOnSave": true,
        "vulnerabilityChecks": true,
        "dependencyAnalysis": true,
        "secretsDetection": true
    },
    "telemetry": {
        "enabled": true,
        "anonymousUsageData": true
    }
} 